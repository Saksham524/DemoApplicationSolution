@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Add script to handle form submission and redirect
        document.getElementById('employeeForm').addEventListener('submit', function (event) {
            // Prevent the default form submission
            event.preventDefault();

            // Your additional logic or validation if needed

            // Redirect to the Index action after a successful form submission
            window.location.href = '/Employee/Index'; // Adjust the URL as needed
        });
    </script>
}
